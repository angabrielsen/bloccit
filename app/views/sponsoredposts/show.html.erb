<h1><%= @sponsoredpost.title %></h1>
  <%= link_to "Edit Sponsored Post", edit_sponsoredpost_path, class: 'btn btn-success' %>
  <%= link_to "Delete Sponsored Post", @sponsoredpost, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this sponsoredpost?' } %>

  <div class="row">
    <div class="col-md-8">
      <p class="lead"><%= @sponsoredpost.body %></p>
    </div>

    <div class="col-md-4">
      <%= link_to "New Sponsored Post", new_sponsoredpost_path(@topic), class: 'btn btn-success' %>
    </div>
  </div>