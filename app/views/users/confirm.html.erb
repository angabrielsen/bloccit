<br>

<div class="jumbotron">
	<h1>Sign Up Confirmation</h1>
	<h2>Are you sure these values are correct?</h2>
</div>

<div class="row">
	<%= "Email: #{@user.email}" %>
</div>

<div class="row">
	<%= "Name: #{@user.name}" %>
</div>

<div class="row">
	<div class="col-md-2">
		<%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class:"btn btn-success" %>
	</div>

	<div class="col-md-2">
		<%= link_to "No", {:controller => "users", :action => "new"}, class:"btn btn-danger" %>
	</div>
</div>